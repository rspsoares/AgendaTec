<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target xsi:type="File" name="ServiceError" fileName="${basedir}/logs/${shortdate}_ServiceError.log" layout="${longdate} ${uppercase:${level}} ${message}" encoding="UTF-16" />
    <target xsi:type="File" name="ServiceInfo" fileName="${basedir}/logs/debug/${shortdate}_ServiceInfo.log" layout="${longdate} ${uppercase:${level}} ${message}" encoding="UTF-16" />

    <target xsi:type="File" name="SendMailError" fileName="${basedir}/logs/${shortdate}_SendMailError.log" layout="${longdate} ${uppercase:${level}} ${message}" encoding="UTF-16" />
    <target xsi:type="File" name="SendMailInfo" fileName="${basedir}/logs/debug/${shortdate}_SendMailInfo.log" layout="${longdate} ${uppercase:${level}} ${message}" encoding="UTF-16" />
    
    <target xsi:type="File" name="CleanUpError" fileName="${basedir}/logs/${shortdate}_CleanUpError.log" layout="${longdate} ${uppercase:${level}} ${message}" encoding="UTF-16" />
    <target xsi:type="File" name="CleanUpInfo" fileName="${basedir}/logs/debug/${shortdate}_CleanUpInfo.log" layout="${longdate} ${uppercase:${level}} ${message}" encoding="UTF-16" />
  </targets>
  <rules>
    <logger name="ServiceErrorLogger" minlevel="Error" writeTo="ServiceError" />
    <logger name="ServiceInfoLogger" minlevel="Trace" writeTo="ServiceInfo" />

    <logger name="SendMailErrorLogger" minlevel="Error" writeTo="SendMailError" />
    <logger name="SendMailInfoLogger" minlevel="Trace" writeTo="SendmailSendInfo" />

    <logger name="CleanUpErrorLogger" minlevel="Error" writeTo="CleanUpError" />
    <logger name="CleanUpInfoLogger" minlevel="Trace" writeTo="CleanUpInfo" />
  </rules>
</nlog>