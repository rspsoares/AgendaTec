@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" lang="pt-br" id="htmlpage" ng-app>
<head>
    <!-- META TAGS -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="BVF Informática - AgendaTec" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="title" content="BVF Informática - AgendaTec" />
    <meta name="url" content="www.bvfinfo.com/" />
    <meta name="author" content="BVF Informática" />
    <meta name="company" content="BVF Informática" />
    <meta name="revisit-after" content="7" />
    <meta http-equiv="Content-Language" content="pt-br">
    <title>..:: AgendaTec - Alteração de senha ::..</title>

    @Styles.Render("~/Content/css")

    @model AgendaTec.Client.Models.ChangePasswordViewModel

    <style type="text/css">
        html {
            background: none;
        }

        @@media only screen and (max-width: 767px) {
            #HeaderContainer {
                min-height: 45px;
            }
        }
    </style>
</head>
<body>
    <div id="Container" class="wrap">
        <div id="ContentContainer">
            <div id="Center-Container">
                <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" style="margin-top: 10px;">
                    <section id="loginForm">
                        <div class="legend">Alterar senha</div>
                        <div class="control-group well">
                            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.ValidationSummary()
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    @Html.DisplayNameFor(c => c.OldPassword)
                                    @Html.PasswordFor(c => c.OldPassword, new { @id = "txtOldPassword", @style = "width: 100%;", @class = "k-textbox" })
                                </div>

                                <div class="form-group">
                                    @Html.DisplayNameFor(c => c.NewPassword)
                                    @Html.PasswordFor(c => c.NewPassword, new { @id = "txtNewPassword", @style = "width: 100%;", @class = "k-textbox" })
                                </div>

                                <div class="form-group">
                                    @Html.DisplayNameFor(c => c.ConfirmPassword)
                                    @Html.PasswordFor(c => c.ConfirmPassword, new { @id = "txtConfirmPassword", @style = "width: 100%;", @class = "k-textbox" })
                                </div>

                                <div class="form-group">
                                    <button id="btnAlterarSenha" type="submit" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span> Alterar Senha</button>
                                </div>
                            }

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

    <div id="FooterContainer">
        <div id="Footer">
            <div class="col-xs-12">
                <small>&#174; @DateTime.Now.Year.ToString() - Todos direitos reservados.</small>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>