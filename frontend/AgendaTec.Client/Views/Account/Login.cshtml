@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" lang="pt-br" id="htmlpage" ng-app>
<head>
    <!-- META TAGS -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="BVF Informática - AgendaTec" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="title" content="BVF Informática - AgendaTec" />
    <meta name="url" content="www.bvfinfo.com/" />
    <meta name="author" content="BVF Informática" />
    <meta name="company" content="BVF Informática" />
    <meta name="revisit-after" content="7" />
    <meta http-equiv="Content-Language" content="pt-br">
    <title>..:: AgendaTec - Login ::..</title>

    @Styles.Render("~/Content/css")

    @using AgendaTec.Client.Models
    @model LoginViewModel    

    <style type="text/css">
        html {
            background: none;
        }

        @@media only screen and (max-width: 767px) {
            #HeaderContainer {
                min-height: 45px;
            }
        }
    </style>
</head>
<body>
    <div id="Container" class="wrap">
        <div id="ContentContainer">
            <div id="Center-Container">
                <div class="col-lg-4 col-lg-offset-3 col-md-4 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12" style="margin-top: 10px;">
                    <section id="loginForm">
                        <div class="legend">Login</div>
                        <div class="control-group well">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.DisplayNameFor(c => c.Email)
                                    @Html.TextBoxFor(c => c.Email, new { @id = "txtEmail", @style = "width: 100%;", @class = "k-textbox", @autofocus = "" })
                                </div>
                                <div class="form-group">
                                    @Html.DisplayNameFor(c => c.Password)
                                    @Html.PasswordFor(c => c.Password, new { @style = "width: 100%;", @class = "k-textbox" })
                                </div>
                                <div class="form-group">
                                    <button id="btnLogin" type="submit" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-lock"></span> Entrar</button>
                                    <button type="button" id="btnRestorePass" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-refresh"></span> Esqueci minha senha</button>
                                </div>
                            }

                            <hr />

                            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                         
                        </div>
                    </section>
                </div>               
            </div>
        </div>
    </div>

    <div id="FooterContainer">
        <div id="Footer">
            <div class="col-xs-12">
                <small>&#174; @DateTime.Now.Year.ToString() - Todos direitos reservados.</small>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
